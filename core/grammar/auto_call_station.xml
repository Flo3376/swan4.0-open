<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<grammar version="1.0" xml:lang="fr-FR" mode="voice" root="call_station" xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics/1.0">
  <rule id="call_station" scope="public">
    <tag>out.action=new Object();</tag>
    <item>Robert</item>
    <one-of>
      <item>Peux-tu contacter la station pour atterrir</item>
      <item>Demande l'autorisation d'atterrir</item>
      <item>Contacte la station pour le décollage</item>
      <item>Demande l'autorisation de décoller</item>
      <item>Appelle la station</item>
    </one-of>
    <tag>out.action.action="call_station";</tag>
  </rule>
</grammar>